  <div class="flex flex-col space-y-2 bg-amber px-48 py-12">
    <div class="flex flex-col px-[260px] space-y-12">
      <p class="text-black text-[30px] font-bold tracking-[-0.75px] leading-[34px]">Contact Us</p>
      <div class="flex justify-center space-x-12">
        <!-- left section -->
        <div class="flex flex-col space-y-12">
          <!-- register box -->
          <div class="flex flex-col space-y-4">
            <div class="flex flex-col space-y-4 bg-white border-black border-2 p-5 rounded-xl w-[330px] h-[140px]">
              <div class="flex justify-between">
                <div class="flex space-x-2 items-center">
                  <%= image_tag "dot.svg" %>
                  <p class="text-black text-lg font-bold tracking-[-0.45px] leading-[24px]">Register</p>
                </div>
                <%= image_tag "profile-plus.svg" %>
              </div>
              <p class="text-body text-base font-normal tracking-[-0.4px] leading-[24px]">I want to help Aid Humanity and receive future appeals</p>
            </div>

            <!-- fundraiser box -->
            <div class="flex flex-col space-y-4 border-Gray border-opacity-25 border-2 p-5 rounded-xl w-[330px] h-[140px]">
              <div class="flex justify-between">
                <div class="flex space-x-2 items-center">
                  <%= image_tag "clock.svg" %>
                  <p class="text-black text-lg font-bold tracking-[-0.45px] leading-[24px]">Fundraiser</p>
                </div>
                <%= image_tag "heart-plus.svg" %>
              </div>
              <p class="text-body text-base font-normal tracking-[-0.4px] leading-[24px]">Become a fundraiser and kick start your own Charity appeal</p>
            </div>
          </div>
        </div>

        <!-- right section -->
        <div class="flex flex-col space-y-8">
          <div class="flex flex-col space-y-4 w-[540px]">
            <input class="placeholder-black text-[13px] font-normal tracking-[0px] leading-[15px] bg-amber border-2 border-opacity-50 border-black rounded-lg h-[50px] p-2" placeholder="Name and Surname*">
            <input class="placeholder-black text-[13px] font-normal tracking-[0px] leading-[15px] bg-amber border-2 border-opacity-50 border-black rounded-lg h-[50px] p-2" placeholder="Email*">
            <input class="placeholder:text-start placeholder:-translate-y-6 placeholder-black text-[13px] font-normal tracking-[0px] leading-[15px] bg-amber border-2 border-opacity-50 border-black rounded-lg h-[98px] p-2" placeholder="Please provide as much detailed information as possible. Thank you *">
          </div>
          <button class="bg-green w-[210px] h-[50px] rounded-lg text-sm font-bold">SUBMIT MESSAGE</button>
        </div>
      </div>
    </div>
  </div>
